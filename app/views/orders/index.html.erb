<div class="container">
	<div class="row">
		<div class="col-xs-10">

			<h8>注文履歴一覧</h8>

			<table class="table">
				<thead>
					<tr>
						<th>注文日</th>
						<th>配送先</th>
						<th>注文商品</th>
						<th>支払金額</th>
						<th>ステータス</th>
						<th>注文詳細</th>
					</tr>
				</thead>

				<% @orders.each do |order| %>
					<tbody>
						<tr>
							<td><%= order.created_at.strftime('%Y/%m/%d') %></td>
							<td>
								<%= order.postcode %>
								<%= order.address %>
								<%= order.name %>
							</td>
							<td>
								<% order.order_products.each do |order_product| %>
									<p><%= order_product.product.name %></p>
								<% end %>
							</td>
							<td><%= order.billing %></td>
							<td><%= order.order_status %></td>
							<td><%= link_to "表示する", order_path(order) %></td>
						</tr>
					</tbody>
				<% end %>
			</table>

		</div>
	</div>
</div>