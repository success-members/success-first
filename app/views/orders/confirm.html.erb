<div class="container">
	<div class="row">
		<div class="col-xs-12">
			<h2>注文情報確認</h2>
		</div>

		<div class="col-xs-9">
			<table class="table">
				<thead>
					<tr>
						<th>商品名</th>
						<th>単価(税込)</th>
						<th>数量</th>
						<th>小計</th>
					</tr>
				</thead>

				<% @cart_items.each do |cart_item| %>
					<% @total_amount += cart_item.product.price * cart_item.number %>
					<tbody>
						<tr>
							<td>
								<%= attachment_image_tag cart_item.product, :image, fallback: "no_image.jpg", size: "40x40" %>
								<%= cart_item.product.name %>
							</td>
							<td><%= cart_item.product.price %></td>
							<td><%= cart_item.number %></td>
							<td><%= cart_item.product.price * cart_item.number %></td>
						</tr>
						</tbody>
				<% end %>
			</table>
		</div>

		<div class="col-xs-3">
			<table>
				<tr>
					<th>送料</th>
					<td><%= @POSTAGE %></td>
				</tr>
				<tr>
					<th>商品合計</th>
					<td><%= @total_amount %></td>
				</tr>
				<tr>
					<th>請求金額</th>
					<td><%= billing = @POSTAGE + @total_amount %></td>
				</tr>
			</table>

			<div class="col-xs-12">
				<h2>支払方法</h2>
				<h5><%= @order.payment_method %></h5>

				<h2>お届け先</h2>
				<h5>
					<%= @postcode %>
					<%= @address %>
				</h5>
				<h5><%= @name %></h5>
			</div>

			<%= form_for(@order) do |f| %>
				<%= f.hidden_field :payment_method, value: @order.payment_method %>
				<%= f.hidden_field :postage, value: @POSTAGE %>
				<%= f.hidden_field :billing, value: billing %>
				<%= f.hidden_field :postcode, value: @postcode %>
				<%= f.hidden_field :address, value: @address %>
				<%= f.hidden_field :name, value: @name %>

				<%= f.submit '購入を確定する' %>
			<% end %>

		</div>
	</div>
</div>