<div class="container">
	<div class="row">
		<div class="col-xs-12">
			<h2>注文履歴詳細</h2>
		</div>

		<div class="col-xs-8">
			<p>注文情報</p>
			<table class="table">
				<thead>
					<tr>
						<th>注文日</th>
						<th>配送先</th>
						<th>支払方法</th>
						<th>ステータス</th>
					</tr>
				</thead>

				<tbody>
					<tr>
						<td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
						<td>
							<p><%= @order.postcode %></p>
							<p><%= @order.address %></p>
							<p><%= @order.name %></p>
							</td>
						<td><%= @order.payment_method %></td>
						<td><%= @order.order_status %></td>
					</tr>
				</tbody>
			</table>
		</div>

		<div class="col-xs-4">
			<p>請求情報</p>
			<table>
				<tr>
					<th>商品合計</th>
					<td><%= @total_amount %></td>
				</tr>
				<tr>
					<th>配送料</th>
					<td><%= @order.postage %></td>
				</tr>
				<tr>
					<th>ご請求金額</th>
					<td><%= @order.billing %></td>
				</tr>
			</table>
		</div>

		<div class="col-xs-12">
			<p>注文内容</p>
			<table class="table">
				<thead>
					<tr>
						<th>商品</th>
						<th>単価(税込)</th>
						<th>数量</th>
						<th>小計</th>
					</tr>
				</thead>

				<% @order.order_products.each do |order_product| %>
					<tbody>
						<tr>
							<td><%= order_product.product.name %></td>
							<td><%= order_product.unit_price %></td>
							<td><%= order_product.number %></td>
							<td><%= order_product.unit_price * order_product.number %></td>
						</tr>
						</tbody>
				<% end %>
			</table>

		</div>
	</div>
</div>