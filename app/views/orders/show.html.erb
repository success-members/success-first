<body>
  <div class="container">
	<div class="row">
	  <div class="col-xs-12">
		<span class="o_sh">注文履歴詳細</span>
	  </div>
	</div>
	<br>
	<span class="o_s_hf"><strong>注文情報</strong></span>
    <span class="o_s_hs"><strong>請求情報</strong></span>
    <div class='row'>
      <div class='col-xs-6'>
        <table class="table table-bordered">
	      <tbody>
			  <tr>
				<th class="o_s_tf">注文日</th>
				<td class="c_s_tw"><%= @order.created_at.strftime('%Y/%m/%d') %></td>
			  </tr>
			  <tr>
				<th class="o_s_tf"><br>配送先</th>
				<td class="c_s_tw">
					<%= @order.postcode %><br>
					<%= @order.address %><br>
					<%= @order.name %><br>
				</td>
			  </tr>
			  <tr>
				<th class="o_s_tf">支払方法</th>
				<td class="c_s_tw">
					<%= @order.payment_method %>
				</td>
			  </tr>
			  <tr>
				<th class="o_s_tf">ステータス</th>
				<td class="c_s_tw"><%= @order.order_status %></td>
			  </tr>
		  </tbody>
        </table>
      </div>
	  <div class='col-xs-3'>
        <table class="table table-bordered">
	      <tbody>
			  <tr>
				<th class="o_stf">商品合計</th>
				<td class="c_s_tw"><%= @total_amount %></td>
			  </tr>
			  <tr>
				<th class="o_stf">配送料</th>
				<td class="c_s_tw"><%= @order.postage %></td>
			  </tr>
			  <tr>
				<th class="o_stf">ご請求金額</th>
				<td class="c_s_tw"><%= @order.billing %></td>
			  </tr>
	      </tbody>
        </table>
      </div>
    </div>
    <div class="row">
	<div class="col-xs-8">
		<span class="o_s_ht"><strong>注文内容</strong></span>
		<table class="table table-bordered">
			<thead>
				<tr class="o_stf">
					<th class="o_stn">商品</th>
					<th class="o_stp">単価(税込)</th>
					<th class="o_str">個数</th>
					<th class="o_stt">小計</th>
				</tr>
			</thead>

			<% @order.order_products.each do |order_product| %>
				<tbody>
					<tr>
						<td><%= order_product.product.name %></td>
						<td><%= ((order_product.unit_price * @tax).round(2)).ceil %></td>
						<td><%= order_product.number %></td>
						<td><%= ((order_product.unit_price * @tax).round(2)).ceil * order_product.number %></td>
					</tr>
					</tbody>
			<% end %>
		</table>

	</div>
    </div>
  </div>
</body>