<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!--ヘッダーの記述-->
    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">

        <nav class="nav navbar-nav navbar-left">
          <span class="span_rogo">ロゴ（設定まだ）</span>
        </nav>

        <nav>
          <ul class="nav navbar-nav navbar-">
            <li><% if customer_signed_in? %> <!--ログイン時の名前表示-->
              <span class="span_rogo">ようこそ、<%= current_customer.last_name %><%= current_customer.first_name %>さん！</span>
            <% else %>
            <% end %></li>
          </ul>
        </nav>

        <nav>
          <ul class="nav navbar-nav navbar-right">
            <!--if文でサインインとアウト時の表示を変更-->
              <% if customer_signed_in? %> <!--ログイン時の名前表示-->

            <li><%= link_to ' マイページ', customer_path(current_customer.id) %></li><!--リンク反映済み-->
            <li><%= link_to ' 商品一覧', products_path %></li><!--リンク反映済み-->
            <li><%= link_to ' カート', cart_items_path %></li><!--リンク反映済み-->
            <li><%= link_to ' ログアウト', destroy_customer_session_path, method: :delete %></li><!--リンク反映済み-->
            <% else %>
            <li><%= link_to ' 商品一覧',new_customer_registration_path %></li>
            <li><%= link_to ' 新規登録', new_customer_registration_path %></li><!--リンク反映済み-->
            <li><%= link_to ' ログイン', new_customer_session_path %></li><!--リンク反映済み-->
            <% end %>
          </ul>
        </nav>

      </div>
    </header>

    <% if customer_signed_in? %> 
      <%= form_tag(search_path,:method => 'get') do %> 
        <%= text_field_tag :search %>
        <%= select_tag(:option, options_for_select([["商品","1"]]))%> 
        <%= select_tag(:choice, options_for_select([["完全一致検索", "1" ],["前方一致検索", "2" ],["後方一致検索", "3" ],["部分一致検索","4"]]))%>
        <%= submit_tag 'Search' %>
      <% end %>
    <% else %>
    <% end %>
    <!--ヘッダーの記述-->
    <div class="container">
      <p id="notice"><%= notice %></p> <!--デバイスでnotice設定されているので呼び出してるだけ-->

    </div>

    <%= yield %>
  </body>
</html>
