<div class="container">
	<div class="add_genres">
		<h3>ジャンル一覧・追加</h3>

		<%= form_with url: admins_genres_path, local: true do |f| %>
			<label class="">ジャンル</label>

			<%= f.text_field :name %>
			<label><%= f.radio_button :is_valid, true, checked: true %>有効</label>
			<label><%= f.radio_button :is_valid, false %>無効</label>

			<%= f.submit '追加' %>
		<% end %>
	</div>

	<!-- ジャンル一覧 -->
	<div class="genres_all">
		<table class="table">
			<thead>
				<tr>
					<th>ジャンル</th>
					<th>状態</th>
					<th></th>
				</tr>
			</thead>

			<tbody>
				<% @genres.each do |genre| %>
				<tr>
					<td><%= genre.name %></td>
					<td><%= genre.is_valid %></td>

					<td><%= link_to '編集する', edit_admins_genre_path(@genres) %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
	<!-- ジャンル一覧 -->
</div>