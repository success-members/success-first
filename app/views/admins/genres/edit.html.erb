<div class="container">
	<h3>ジャンル編集</h3>

	<%= form_with url: admins_genre_path(), local: true do |f| %>
		<label class="">ジャンル</label>
		<%= f.text_field :name, class: 'col-xs-12' %>

		<label><%= f.radio_button :is_valid, true, checked: true %>有効</label>
		<label><%= f.radio_button :is_valid, false %>無効</label>

		<%= f.submit '変更を保存する' %>
	<% end %>
</div>