 <body>
   <div  class="s_i">
     <span class="s_g">配送先登録/一覧</span>

    <br><br> <!--改行による隙間明け-->

     <%= form_for(@shipping_address_new) do |f| %>  
       <div class='row'>
         <div class='col-xs-2'>
           <%= f.label :郵便番号（ハイフンなし） %>
         </div>
         <div class='col-xs-3'>
           <%= f.text_field :postcode, autofocus: true, class: "s_field" %>
         </div>
       </div>
    <br><!--改行による隙間明け-->   
       <div class='row'>
         <div class='col-xs-2'>
           <%= f.label :住所 %>
         </div>
         <div class='col-xs-3'>
           <%= f.text_field :address, autofocus: true, class: "s_field", size: 60%>
         </div>
       </div>
    <br><!--改行による隙間明け-->
       <div class='row'>
         <div class='col-xs-2'>
           <%= f.label :宛名 %>
         </div>
         <div class='col-xs-4'>
           <%= f.text_field :name, autofocus: true, class: "s_field" %>
         </div>
         <div class='col-xs-2'>
           <%= f.submit "登録する",class: "btn btn-success" %>
         </div>    
       </div>
     <% end %>


    <br><br><br> <!--改行による隙間明け-->

     <div class='row'>
       <div class='col-xs-6'>
         <table class="table table-bordered">
           <thead class="s_i_s">
             <tr>
                <th>郵便番号</th>
                <th class="s_i_aw">住所</th>
                <th class="s_i_an">宛名</th>
                <th class="s_i_aa"></th>
             </tr>
           </thead>

           <tbody>
    	       <% @shipping_addresses.each do |shipping_address| %>
                <tr>
          		  <td><%= shipping_address.postcode %></td>
          		  <td><%= shipping_address.address %></td>
          		  <td><%= shipping_address.name %></td>
                <td>
                  <%= link_to ' 編集する', edit_shipping_address_path(shipping_address.id),class: "btn btn-primary" %>
                  <%= link_to "削除する", shipping_address_path(shipping_address), method: :delete,class: "btn btn-danger" %>
                </td>
                </tr>
             <% end %>
           </tbody>
         </table>
       </div>
     </div>
 </div>
</body>

