<body class="s_e">
  <span class="s_g">配送先編集</span>

  <br><br><!--改行による隙間明け-->

  <%= form_for(@shipping_address) do |f| %>

     <div class='row'>
       <div class='col-xs-2'>
         <%= f.label :郵便番号（ハイフンなし） %>
       </div>
       <div class='col-xs-3'>
         <%= f.text_field :postcode, autofocus: true, class: "s_field" %>
       </div>
     </div>
  <br><!--改行による隙間明け-->   
     <div class='row'>
       <div class='col-xs-2'>
         <%= f.label :住所 %>
       </div>
       <div class='col-xs-3'>
         <%= f.text_field :address, autofocus: true, class: "s_field", size: 60%>
       </div>
     </div>
  <br><!--改行による隙間明け-->
     <div class='row'>
       <div class='col-xs-2'>
         <%= f.label :宛名 %>
       </div>
       <div class='col-xs-2'>
         <%= f.text_field :name, autofocus: true, class: "s_field" %>
       </div>
     </div>
  <br><!--改行による隙間明け-->
     <div class='row'>
       <div class='col-xs-6'></div>
       <div class='col-xs-6'>
         <%= f.submit "編集する",class: "btn btn-primary" %>
       </div>
    </div>
  <% end %>
</body>