<h3>配送先編集</h3>
<%= form_for(@shipping_address) do |f| %>

   <div class="field">
    <%= f.label :郵便番号（ハイフンなし） %>
    <%= f.text_field :postcode, autofocus: true, placeholder: 'postal_code', class: "postal_code", id: "address_zipcode"  %>
   </div>

   <div class="field">
    <%= f.label :住所 %>
    <%= f.text_field :address, autofocus: true, class: "hoge", size: 60%>
  </div>

  <div class="field">
    <%= f.label :宛名 %>
    <%= f.text_field :name, autofocus: true, class: "name" %>
  </div>

  <div class="actions">
    <%= f.submit "編集する" %>
  </div>
<% end %>