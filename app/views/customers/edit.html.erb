<body class="c_e">
  <span class="c_g">登録情報編集</span><br><br>
  

  <%= form_for(@customer) do |f| %>
    <div class='row'>
      <div class='col-xs-2'>
        <span class="c_h">名前</span>
      </div>
      <div class='col-xs-2'>
       （性）<%= f.text_field :last_name, autofocus: true, class: "c_field_n", size:15 %>
      </div>
      <div class='col-xs-2'>
       （名）<%= f.text_field :first_name, autofocus: true, class: "c_field_n", size:15 %>
      </div>
    </div>
    <div class='row'>
      <div class='col-xs-2'>
        <span class="c_h">フリガナ</span>
      </div>
      <div class='col-xs-2'>
       （セイ）<%= f.text_field :last_name_kana, autofocus: true, class: "c_field_nk", size:15 %>
      </div>
      <div class='col-xs-2'>
       （メイ）<%= f.text_field :first_name_kana, autofocus: true, class: "c_field_nk", size:15 %>
      </div>
    </div>
    <div class='row'>
      <div class='col-xs-2'>
        <span class="c_h">メールアドレス</span>
      </div>
      <div class='col-xs-3'>
        <%= f.email_field :email, autofocus: true, class: "c_field_a", size:15 %>
      </div>
    </div>
    <div class='row'>
      <div class='col-xs-2'>
        <span class="c_h">郵便番号（ハイフンなし）</span>
      </div>
      <div class='col-xs-3'>
        <%= f.text_field :postcode, autofocus: true, class: "c_field_a", size:15  %>
      </div>
    </div>
    <div class='row'>
      <div class='col-xs-2'>
        <span class="c_h">住所</span>
      </div>
      <div class='col-xs-3'>
        <%= f.text_field :address, autofocus: true, class: "c_field_a", size: 60%>
      </div>
    </div>

    <div class='row'>
      <div class='col-xs-2'>
        <span class="c_h">電話番号（ハイフンなし）</span>
      </div>
      <div class='col-xs-3'>
        <%= f.text_field :phone_number, autofocus: true, class: "c_field_a", size:15  %>
      </div>
    </div>

  <br> <!--改行による隙間-->

    <div class='row'>
      <div class='col-xs-2'></div>
      <div class='col-xs-3'>
        <%= f.submit "編集内容を保存する",class: "btn btn-primary" %>
      </div>
        <%= link_to ' 退会する', withdrawal_path(current_customer.id),class: "btn btn-danger" %>
    </div>
  <% end %>
</body>