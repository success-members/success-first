<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :名前 %>
    （性）<%= f.text_field :last_name, autofocus: true, class: "name" %>
    （名）<%= f.text_field :first_name, autofocus: true, class: "name" %>
  </div>

  <div class="field">
    <%= f.label :フリガナ %>
    （セイ）<%= f.text_field :last_name_kana, autofocus: true, class: "name" %>
    （メイ）<%= f.text_field :first_name_kana, autofocus: true, class: "name" %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :郵便番号（ハイフンなし） %>
    <%= f.text_field :postcode, autofocus: true, placeholder: 'postal_code', class: "postal_code", id: "address_zipcode"  %>
  </div>

  <div class="field">
    <%= f.label :住所 %>
    <%= f.text_field :address, autofocus: true, class: "hoge", size: 60%>
  </div>

  <div class="field">
    <%= f.label :電話番号（ハイフンなし） %>
    <%= f.text_field :phone_number, autofocus: true, class: "phone_number"  %>
  </div>

  <div class="field">
    <%= f.label :パスワード（6文字以上） %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード（確認用） %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<h2>既に登録済みの方</h2>
<%= render "customers/shared/links" %>
