<body class="h_sign">
  <span class="h_gs">新規会員登録</span>

  <br><br><!--改行による隙間明け-->

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class='row'>
      <div class='col-xs-2'>
      <span>名前</span>
      </div>
      <div class='col-xs-2'>
       （性）<%= f.text_field :last_name, autofocus: true, class: "h_sign_fn" %>
      </div>
      <div class='col-xs-2'>
       （名）<%= f.text_field :first_name, autofocus: true, class: "h_sign_fn" %>
      </div>
    </div>
    <div class='row'>
      <div class='col-xs-2'>
        <span>フリガナ</span>
      </div>
      <div class='col-xs-2'>
       （セイ）<%= f.text_field :last_name_kana, autofocus: true, class: "h_sign_fnk" %>
      </div>
      <div class='col-xs-2'>
       （メイ）<%= f.text_field :first_name_kana, autofocus: true, class: "h_sign_fnk" %>
      </div>
    </div>
    <div class='row'>
      <div class='col-xs-2'>
        <span>メールアドレス</span>
      </div>
      <div class='col-xs-3'>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "h_sign_f"  %>
      </div>
    </div>
    <div class='row'>
      <div class='col-xs-2'>
        <span>郵便番号（ハイフンなし）</span>
      </div>
      <div class='col-xs-3'>
        <%= f.text_field :postcode, autofocus: true, class: "h_sign_f" %>
      </div>
    </div>
    <div class='row'>
      <div class='col-xs-2'>
        <span>住所</span>
      </div>
      <div class='col-xs-4'>
        <%= f.text_field :address, autofocus: true, class: "h_sign_f", size: 69%>
      </div>
    </div>
    <div class='row'>
      <div class='col-xs-2'>
        <span>電話番号</span>
      </div>
      <div class='col-xs-4'>
        <%= f.text_field :phone_number, autofocus: true, class: "h_sign_f" %>
      </div>
    </div>
    <div class='row'>
      <div class='col-xs-2'>
        <span>パスワード（6文字以上）</span>
      </div>      
      <div class='col-xs-4'>
        <%= f.password_field :password, autocomplete: "new-password", class: "h_sign_f" %>
      </div>
    </div>
    <div class='row'>
      <div class='col-xs-2'>
        <span>パスワード（確認用）</span>
      </div>
      <div class='col-xs-4'>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "h_sign_f" %>
      </div>
    </div>

    <span class="h_sign_b">
      <%= f.submit "新規登録",class: "btn btn-success", id: "sb" %>
    </span>
  <% end %>
<br><br>
  <span class="h_gs">既に登録済みの方</span><br>
  <span class="h_sigin_log"><%= render "customers/shared/links" %></span>
</body>
