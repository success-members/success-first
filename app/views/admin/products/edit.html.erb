<div class="container">
	<div class="row">
		<h3 class="text-center bg-warning col-xs-2">商品編集</h3>
	</div>

	<div class="row">
		<%= form_with model: @product, url: admin_product_path(@product.id), local: true do |f| %>
			<div class="col-xs-4">
				<div class="add_products">
					<%= attachment_image_tag(@product, :image, :fill, 250, 170, fallback: 'no_image.jpg', size: '250x170') %>
					<%= f.attachment_field :image %>
				</div>
			</div>


			<div class="col-xs-5">
				<label>商品名</label>
				<%= f.text_field :name %><br>

				<label>商品説明</label>
				<%= f.text_area :explanation  %><br>

				<label>ジャンル</label>
				<%#= f.collection_select :genre_id, genre.all, :genre_id, :genre_id, include_blank: '選択して下さい' %><br>

				<label>税抜価格</label>
				<%= f.text_field :price %>円<br>

				<label>販売<br>ステータス</label>
				<%= f.select :is_sale, [['販売中',true], ['売切れ', false]] %>
			</div>

			<div class="col-xs-3">
				<%= f.submit '新規登録', class: 'btn btn-info bottom' %>
			</div>
		<% end %>
	</div>
</div>