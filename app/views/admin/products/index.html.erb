<div class="container">
	<div class="row">
		<div class="col-xs-3 a_p_i_headline">
			<h3 class="text-center">商品一覧</h3>
		</div>
	</div>

	<div class="row">
		<!-- 商品一覧 -->
		<div class="a_products_all col-xs-10">
			<%= link_to new_admin_product_path do %>
				<span class="glyphicon glyphicon-plus-sign pull-right a_add_btn" aria-hidden="true"></span>
			<% end %>
			<table class="table">
				<thead>
					<tr class="active">
						<th class="col-xs-1">商品ID</th>
						<th class="col-xs-3">商品名</th>
						<th class="col-xs-1">税抜価格</th>
						<th class="col-xs-3">ジャンル</th>
						<th class="col-xs-1">ステータス</th>
					</tr>
				</thead>

				<tbody>
					<% @products.each do |product| %>
						<% if product.genre.is_valid == true %>
							<tr>
								<td><%= product.id %></td>
								<td>
									<%= link_to admin_product_path(product) do %>
									<%= product.name %>
									<% end %>
								</td>
								<td><%= product.price %></td>
								<td><%= product.genre.name %></td>
								<td>

									<% if product.is_sale == true %>
										<%= product.is_sale = '販売中' %>
									<% else %>
										<%= product.is_sale = '売切れ' %>
									<% end %>
								</td>
							</tr>
						<% end %>
					<% end %>
				</tbody>
			</table>
		</div>
		<!-- 商品一覧 -->
	</div>
   <div class="row">
	<div class="a_products_page col-xs-10">
	  <%= paginate @products %>
	</div>
   </div>
</div>