<div class="container">
	<div class="row">
		<h3 class="bg-warning col-xs-2 text-center">商品一覧</h3>
	</div>

	<div class="row">
		<!-- 商品一覧 -->
		<div class="groducts_all col-xs-10">
			<%= link_to new_admin_product_path do %>
				<span class="glyphicon glyphicon-plus-sign pull-right" aria-hidden="true"></span>
			<% end %>
			<table class="table">
				<thead>
					<tr class="active">
						<th>商品ID</th>
						<th>商品名</th>
						<th>税抜価格</th>
						<th>ジャンル</th>
						<th>ステータス</th>
					</tr>
				</thead>

				<tbody>
					<% @products.each do |product| %>
						<% if product.genre.is_valid == true %>
							<tr>
								<td><%= product.id %></td>
								<td>
									<%= link_to admin_product_path(product) do %>
									<%= product.name %></td>
									<% end %>
								<td><%= product.price %></td>
								<td><%= product.genre.name %></td>
								<td>

									<% if product.is_sale == true %>
										<%= product.is_sale = '販売中' %>
									<% else %>
										<%= product.is_sale = '売切れ' %>
									<% end %>
								</td>
							</tr>
						<% end %>
					<% end %>
				</tbody>
			</table>
		</div>
		<!-- 商品一覧 -->
	</div>
</div>