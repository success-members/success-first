<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h2>注文履歴一覧</h2>
    </div>
            <div class="col-xs-9">
             <table class="table">
               <thead>
                 <tr>
                   <th>購入日時</th>
                   <th>購入者</th>
                   <th>注文個数</th>
                   <th>注文ステータス</th>
                 </tr>
               </thead>

               <tbody>
                 <% @orders.each do |order| %>
                 <tr>
                  <td><%= order.created_at %></td>
                  <td><%= link_to order.customer.name, customer_path(customer) %></td>
                  <td><%= order.order_podeuts.sum(:nanbar).to_s %></td>
                  <td></td>
                </tr>
                <% end %>
              </tbody>
            </table>
           </div>
  </div>
</div>
