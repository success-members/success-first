<div class="container">
  <div class="row">
      <div class="col-xs-3 a_o_i_headline">
        <h3 class="text-center">注文履歴一覧</h3>
      </div>
    </div>
            <div class="col-xs-10 a_order_all">
             <table class="table">
               <thead>
                 <tr class="active">
                   <th>購入日時</th>
                   <th>購入者</th>
                   <th>注文個数</th>
                   <th>注文ステータス</th>
                 </tr>
               </thead>

               <tbody>
                 <% @orders.each do |order| %>
                 <tr>
                  <td>
                    <%= link_to admin_order_path(order) do%>
                      <%= order.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
                    <% end %>
                  <td><%= order.customer.last_name %><%= order.customer.first_name %></td>
                  <td><%= order.order_products.count %></td>
                  <td> <%= order.order_status%></td>
                </tr>
                <% end %>
              </tbody>
            </table>
           </div>
  </div>
</div>
