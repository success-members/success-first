<div class="container">
	<div class="row">
		<h3 class="text-center bg-warning col-xs-2">会員編集</h3>
	</div>

	<div class="row">
		<div class="">
			<label>会員ID</label>
				<%= @customer.id %><br>

			<%= form_with model: @customer, url: admin_customer_path(@customer.id), local: true do |f| %>

					<label>氏名</label>
					<%#= f.text_field :last_name %>　<%#= f.text_field :first_name %><br>

					<label>フリガナ</label>
					<%#= f.text_field :last_name_kana %>　<%= f.text_field :first_name_kana %><br>

					<label>郵便番号</label>
					<%#= f.text_field :postcode %><br>

					<label>住所</label>
					<%#= f.text_field :address %><br>

					<label>電話番号</label>
					<%#= f.text_field :phone_number %><br>

					<label>メールアドレス</label>
					<%= f.text_field :email %><br>

					<label>会員ステータス</label>
					<%#= f.radio_button :is_deleted, true, checked: true %>
					<%#= f.label :is_deleted, '有効', value: true %>

					<%#= f.radio_button :is_deleted, false %>
					<%#= f.label :is_deleted, '退会済', value: false %>
					<br>


					<%= f.submit '変更を保存する', class: 'btn btn-info bottom' %>
			<% end %>
		</div>
	</div>
</div>