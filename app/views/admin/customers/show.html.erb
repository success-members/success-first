<div class="container">
	<div class="row">
		<h3 class="text-center col-xs-4 a_c_headline">
			<%= @customer.last_name %> <%= @customer.first_name %>さんの会員詳細
		</h3>
	</div>

	<div class="row">
		<table class="col-xs-9 a_c_table">
			<tr>
				<td class="col-xs-2">顧客ID</td>
				<td class="col-xs-3"><%= @customer.id %>　
					<% if @customer.is_deleted == true %>
						<%= @customer.is_deleted = '有効' %>
					<% else %>
						<%= @customer.is_deleted = '退会済み' %>
					<% end %>
				</td>
			</tr>

			<tr>
				<td class="col-xs-2">氏名</td>
				<td class="col-xs-2"><%= @customer.last_name %> <%= @customer.first_name %></td>
			</tr>

			<tr>
				<td class="col-xs-2">フリガナ</td>
				<td class="col-xs-2"><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
			</tr>

			<tr>
				<td class="col-xs-2">郵便番号</td>
				<td class="col-xs-2"><%= @customer.postcode %></td>
			</tr>

			<tr>
				<td class="col-xs-2">住所</td>
				<td class="col-xs-7"><%= @customer.address %></td>
			</tr>

			<tr>
				<td class="col-xs-2">電話番号</td>
				<td class="col-xs-2"><%= @customer.phone_number %></td>
			</tr>

			<tr>
				<td class="col-xs-2">メールアドレス</td>
				<td class="col-xs-2"><%= @customer.email %></td>
			</tr>
		</table>
	</div>

	<div class="row">
			<%= link_to '編集する', edit_admin_customer_path(@customer), class: 'btn btn-primary a_c_blank_r' %>
			<%= link_to '注文履歴一覧を見る', admin_orders_path, class: 'btn btn-primary' %>
	</div>
</div>