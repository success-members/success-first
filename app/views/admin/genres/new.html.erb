<div class="container">
	<div class="row">
		<div class="col-xs-5">
			<div class="add_genres">
				<h3 class="text-center bg-warning">ジャンル一覧・追加</h3>

				<%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
					<label class="">ジャンル</label>

					<%= f.text_field :name %>

					<!-- ラジオボタン -->
					<!-- <label><%#= f.radio_button :is_valid, true, checked: true %>有効</label> -->
					<!-- <label><%#= f.radio_button :is_valid, false %>無効</label> -->

					<%= f.radio_button :is_valid, true, checked: true %>
					<%= f.label :is_valid, '有効', value: true %>

					<%= f.radio_button :is_valid, false %>
					<%= f.label :is_valid, '無効', value: false %>
					<!-- ラジオボタン -->

					<%= f.submit '追加', class: 'btn btn-info' %>
				<% end %>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="col-xs-5">
			<!-- ジャンル一覧 -->
			<div class="genres_all">
				<table class="table">
					<thead>
						<tr class="active">
							<th>ジャンル</th>
							<th>状態</th>
							<th></th>
						</tr>
					</thead>

					<tbody>
						<% @genres.each do |genre| %>
						<tr>
							<td><%= genre.name %></td>
							<td><%= genre.is_valid %></td>

							<td><%= link_to '編集する', edit_admin_genre_path(genre.id), class: 'btn btn-primary' %></td>
						</tr>
						<% end %>
					</tbody>
				</table>
			</div>
			<!-- ジャンル一覧 -->
		</div>
	</div>
</div>