<div class="container">
	<div class="row">
		<div class="col-xs-2">
			<h3 class="text-center a_g_headline">ジャンル編集</h3>
		</div>
	</div>

	<div class="row">
		<div class="col-xs-6">
			<%= form_with model: @genre, url: admin_genre_path(@genre.id), local: true do |f| %>
				<label class="">ジャンル</label>
				<%= f.text_field :name %>

				<%= f.radio_button :is_valid, true, checked: true %>
				<%= f.label :is_valid, '有効', value: true %>

				<%= f.radio_button :is_valid, false %>
				<%= f.label :is_valid, '無効', value: false %>

				<%= f.submit '変更を保存する', class: 'btn btn-info' %>
			<% end %>
		</div>
	</div>
</div>