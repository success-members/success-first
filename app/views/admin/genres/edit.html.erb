<div class="container">
	<div class="row">
		<div class="col-xs-2 a_g_headline_edit">
			<h3 class="text-center">ジャンル編集</h3>
		</div>
	</div>

	<div class="row">
		<div class="col-xs-6">
			<%= form_with model: @genre, url: admin_genre_path(@genre.id), local: true do |f| %>
				<label class="a_g_blank_r">ジャンル</label>
				<%= f.text_field :name, class: 'a_g_width' %>

				<%= f.radio_button :is_valid, true %>
				<%= f.label :is_valid, '有効', value: true, class: 'a_g_blank_r' %>

				<%= f.radio_button :is_valid, false %>
				<%= f.label :is_valid, '無効', value: false, class: 'a_g_blank_r' %>

				<%= f.submit '変更を保存する', class: 'btn btn-info' %>
			<% end %>
		</div>
	</div>
</div>