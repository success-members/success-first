<div class="container">
	<div class="row">
		<h2>制作ステータス</h2>
	</div>

	<div class="col-xs-9">
             <table class="table">
               <thead>
                 <tr>
                   <th>商品名</th>
                   <th>販売ステータス</th>
                 </tr>
               </thead>

                <tbody>
                 <% @products.each do |product| %>
                 <tr>
                  <td><%= link_to product.name, product_path(product) %></td>
                  <td><%= @product.is_sale %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
    </div>
</div>
